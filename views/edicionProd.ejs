        <link rel="stylesheet" href="../css/styles.css">

</head>

<body>

    <form action = "/<%=editProduct.id %>?_method=PATCH" method = "POST">

                <div>
                  <label for="imagen">Imagen</label><br>
                  <input value = "<%= editProduct.imagen %>" type="file" id="imagen" name="imagen" >
                </div> 
      
                <div>
                  <label for="articulo"> Articulo:</label><br>
                  <input value = "<%= editProduct.articulo %>" type="text" id="articulo" name="articulo" required>
                </div>        
       
               <div>
                <label for="modelo">Modelo</label><br>
                <input value = "<%= editProduct.modelo %>" type="text" id="modelo" name="modelo" required>
              </div>
      
              <div>
                <label for="precio">Precio</label><br>
                <input value = "<%= editProduct.precio %>" type="text" id="precio" name="precio" required>
              </div>
       
        </div>

             <div >
                  <br> 
                   <div>
                      <input type="submit" value="Aceptar" class = "boton">
                   </div>

                         <br>
                   
                   <div>
                     <a href = "/products/<%=editProduct.id%>"><button class = "boton">Regresar</button></a>
                   </div>
            </div> 
                       
    </form>

</body>
</html>
